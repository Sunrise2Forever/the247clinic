<% provide(:title, "Leave Callback") %>
<h1>Leave Callback</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2 col-xs-12">
    <%= form_for(@video_session, url: update_callback_video_session_path(@video_session)) do |f| %>

      <%= f.label :callback %>
      <%= f.text_area :callback, rows: 8, class: 'form-control' %>

      <%= f.submit 'Submit callback', class: "btn btn-primary" %>
    <% end %>
  </div>
</div>