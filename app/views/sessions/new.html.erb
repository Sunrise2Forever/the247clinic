<% provide(:title, t('title.login')) %>

<div class="row">
  <div class="col-md-4 col-md-offset-4 col-sm-6 col-sm-offset-3">
    <%= form_for(:session, url: login_path,
                 html: { class: 'reg-page' }) do |f| %>

      <div class='reg-header'>
        <h1><%= t('title.login') %></h1>
      </div>
      <%= f.label :email %>
      <%= f.email_field :email, class: 'form-control' %>

      <%= f.label :password %>
      <%= link_to t('helpers.label.session.forgot_password'), new_password_reset_path %>
      <%= f.password_field :password, class: 'form-control' %>

      <%= f.label :remember_me, class: "checkbox inline" do %>
        <%= f.check_box :remember_me %>
        <span><%= t('helpers.label.session.remember_me') %></span>
      <% end %>

      <%= f.submit t('content.login'), class: "btn btn-primary" %>
    <% end %>

    <p><%= t('content.new_user') %> <%= link_to t('content.signup_now'), signup_path %></p>
  </div>
</div>
