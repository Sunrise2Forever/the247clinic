<header>
  <nav class="navbar navbar-fixed-top navbar-inverse">
    <div class="container">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <a class="navbar-brand" href="/">24-7 Online Clinic</a>
      </div>
        <div class="collapse navbar-collapse" id="navbar">  
        <ul class="nav navbar-nav navbar-right">
          <li>
            <%= link_to root_path do %>
            <span class="glyphicon glyphicon-home"></span>&nbsp;<%= t('content.home') %>
           <% end %>
          </li>
          <li><%= link_to help_path do %>
            <span class="glyphicon glyphicon-question-sign"></span>&nbsp;<%= t('content.help') %>
            <% end %>
          </li>
          <% if logged_in? %>        
            <li>
                <%= link_to users_path do%>
                <span class="glyphicon glyphicon-th-list"></span>&nbsp;Users
                <% end %>
            </li>                           
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Account</a>
              <ul class="dropdown-menu" role="menu">
                <li>
                   <%= link_to current_user do %>
                   <span class="glyphicon glyphicon-user"></span>&nbsp;Profile
                   <% end %>
                   </li>
                <li>
                  <%= link_to edit_user_path(current_user) do %>
                    <span class="glyphicon glyphicon-cog"></span>&nbsp;Settings
                  <% end %>
                </li>
                <li class="divider"></li>
                <li>
                   <%= link_to logout_path, method: :delete do %>
                   <span class="glyphicon glyphicon-log-out"></span>&nbsp;Log out
                   <% end %>
                </li>
              </ul>
            </li>
            <% else %>
            <li>
              <%= link_to login_path do %>
              <span class="glyphicon glyphicon-log-in"></span>&nbsp;<%= t('title.login') %>
            <% end %>
            </li>
          <% end %>
        </ul>
        <p class="navbar-text navbar-right navbar-link locale"><%= link_to t('menu.languages.en'), change_locale_path(:en) %> | <%= link_to t('menu.languages.zh-CN'), change_locale_path('zh-CN') %> | <%= link_to t('menu.languages.zh-TW'), change_locale_path('zh-TW') %></p> 
      </div>
    </div>
  </nav>
</header>