<% provide(:title, "Edit user") %>
<% if current_user?(@user) %>
  <h1>Update your profile</h1>

  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <%= render 'form' %>

      <div class="gravatar_edit">
        <%= gravatar_for @user %>
        <a href="http://gravatar.com/emails" target="_blank">Change</a>
      </div>
    </div>
  </div>
  <% if current_user.doctor? %>
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <% if @not_working_dates.count > 0 %>
          <h3>You are not working at following days.</h3>
          <table class="table">
            <% @not_working_dates.each do |not_working_date| %>
              <tr>
                <td><%= not_working_date.date.strftime("%B %-d, %Y") %></td>
                <td><%= link_to 'Remove', not_working_date_path(not_working_date), method: :delete, data: { confirm: 'Are you sure?' } %></td>
              </tr>
            <% end %>
          </table>
        <% else %>
          <div class="text-center form-group">There is no date you are not working.</div>
        <% end %>
        <div class="form-group text-center">
          <%= link_to 'Add date', new_not_working_date_path, class: 'btn btn-primary' %>
        </div>
      </div>
    </div>
  <% end %>
<% else %>
  <h1>Update profile </h1>
  <h2><%= @user.name %></h2>

  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <%= render 'form_simple' %>
    </div>
  </div>

<% end %>
