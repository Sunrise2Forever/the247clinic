<li>
  <%= gravatar_for user, size: 50 %>
  <%= link_to user.name, user %>
  <% if current_user.admin? && !current_user?(user) %>
    | <%= link_to "Change Password", edit_user_path(user) %>
    | <%= link_to "Reset Password", { controller: 'password_resets', action: 'create', password_reset: { email: user.email }}, method: :post %>
    | <%= link_to "Reactivation", { controller: 'users', action: 'reactivate', id: user.id }, method: :post %>
    | <%= link_to "Delete", user, method: :delete, data: { confirm: "You sure?" } %>
  <% end %>
</li>